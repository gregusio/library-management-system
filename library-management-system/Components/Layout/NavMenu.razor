@using library_management_system.Services
@using library_management_system.Data
@using Microsoft.EntityFrameworkCore.ChangeTracking.Internal
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthService AuthService
@inject NavigationMenuService NavigationMenuService
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Library</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <AuthorizeView Roles="Librarian">

            @foreach (var (href, buttonName, iconName) in _librarianNavigationMenu!.GetItems())
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href=@href>
                        <div class="me-3">
                            <span class="bi" aria-hidden="true"></span>
                            <Icon Style="margin-right: 5px" Name="@iconName"></Icon>@buttonName
                        </div>

                    </NavLink>
                </div>
            }

            


        </AuthorizeView>

        <div class="nav-item px-3">
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link">
                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                    </button>
                </form>
            </div>

        @foreach (var (href, buttonName, iconName) in _navMenu!.GetItems())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href=@href>
                    <div class="me-3">
                        <span class="bi" aria-hidden="true"></span>
                        <Icon Style="margin-right: 5px" Name="@iconName"></Icon>@buttonName
                    </div>

                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="auth">
                <div class="me-3">
                    <span class="bi" aria-hidden="true"></span>
                    <Icon Style="margin-right: 5px" Name="IconName.Amazon"></Icon>Login
                </div>

            </NavLink>
        </div>


    </nav>
</div>

@code {
    private INavigationMenu? _navMenu;

    private ReaderNavigationMenu _readerNavigationMenu = new();
    private LibrarianNavigationMenu _librarianNavigationMenu = new();

    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
    
    protected override Task OnInitializedAsync()
    {
        _navMenu = NavigationMenuService.CreateMenuForUser(AuthService.User);
        return base.OnInitializedAsync();
    }


}
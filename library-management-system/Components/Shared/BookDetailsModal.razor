                                    </div>
                                </Content>
                            </AccordionItem>
                        </Accordion>
                    </div>
                </div>

            </div>
        </div>
    </BodyTemplate>
</Modal>

@code {
    [Parameter] public EventCallback OnSaveEdit { get; set; }
    [Parameter] public User? User { get; set; }
    
    private Book? Book { get; set; }
    private BookCover BookCover => Book!.BookCover ?? new BookCover();
    private BookInventory BookInventory => DbApi.GetBookInventory(Book!) ?? new BookInventory();
    private bool IsFav => DbApi.IsBookFavorite(User!, Book!); 
    private bool _editMode = false;
    
    private Modal _modal = default!;

    public void Show(Book? book)
    {
        if (book == null)
        {
            Book = new Book();
            return;
        }
        
        Book = book;
        _editMode = false;
        _modal.ShowAsync();
    }
    
    private void HeartClicked()
    {
        if (!IsFav)
        {
            var result = DbApi.FavoriteBook(User!, Book!);
            Console.WriteLine(result == EOperationResult.Success ? "Book added to favorites" : "Failed to add book to favorites");
        }
        else
        {
            var result = DbApi.RemoveFavoriteBook(User!, Book!);
            Console.WriteLine(result == EOperationResult.Success ? "Book removed from favorites" : "Failed to remove book from favorites");
        }
        
        OnSaveEdit.InvokeAsync();
    }

    private void ReserveBook()
    {
        var result = DbApi.ReserveBook(User!, Book!);
        AlertService.ShowOperationResult(result);
        OnSaveEdit.InvokeAsync();
    }
    
    private void RemoveBook()
    {
        var result = DbApi.RemoveBook(Book!);
        Console.WriteLine(result == EOperationResult.Success ? "Book removed" : "Failed to remove book");
        _modal.HideAsync();
        OnSaveEdit.InvokeAsync();
    }

    private void ToggleEditMode()
    {
        _editMode = !_editMode;
    }

    private void Save()
    {
        _editMode = false;
        OnSaveEdit.InvokeAsync();
        DbApi.SaveChanges();
    }
    
    private async Task LoadFile(InputFileChangeEventArgs e)
    {
        var file = e.File;
        
        using var ms = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(ms);
        BookCover.Image = ms.ToArray();
    }
}
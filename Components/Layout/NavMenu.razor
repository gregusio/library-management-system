@using library_management_system.Services
@using library_management_system.Database
@using Microsoft.EntityFrameworkCore.ChangeTracking.Internal
@inject AuthService AuthService
@inject NavigationMenuService NavigationMenuService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">library-management-system</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        
        @foreach (var (href, buttonName) in navMenu.GetItems())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href=@href Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @buttonName
                </NavLink>
            </div>
        }

    </nav>
</div>

@code {
    private INavigationMenu navMenu;

    protected override Task OnInitializedAsync()
    {
        navMenu = NavigationMenuService.CreateMenuForUser(AuthService.User);
        return base.OnInitializedAsync();
    }


}
